extends layout

block content
  h1= title
  p This is row count: #{query.rows} This is column count: #{query.cols}
  - rows=Number(query.rows)
  - col=Number(query.cols)
  
  if !Number.isInteger(rows) || !Number.isInteger(col)
    p a non-integer value was put for either rows or columns
  else if rows<3 || rows>13 
    p a row is greater than thirteen or less than 3
  else if col<3 || col>13 
    p a column is greater than thirteen or less than 3
  else 
    table#outer
      - for(let i=0; i<rows; i++) {
      
        tr#middle
          - for(let j=0; j<col; j++){
          
            td= Math.min(i,j)+1
          - }
      - }





